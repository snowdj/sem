digraph iv {
  graph [rankdir=LR bgcolor=transparent]
  
  node [shape = rectangle, style=filled, fillcolor='#1f65b780', color=gray80, width=.25, height=.25,
        fontcolor=white, fontname=Roboto, fixedsize=true, fontsize='5%']
  X; Y; Z;
  
  edge [shape = circle, alpha=.5 color=gray50 style=filled penwidth=.5 arrowsize=.5]
